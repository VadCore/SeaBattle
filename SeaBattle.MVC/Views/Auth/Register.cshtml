@model RegisterModel

@{
    ViewData["Title"] = "Register";
}
<h1>Register</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register" asp-controller="Auth" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <div>
                <div class="form-group">
                    <label asp-for="LoginModel.Name">Enter first name</label>
                    <input asp-for="LoginModel.Name" />
                    <span asp-validation-for="LoginModel.Name" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="Email">Enter Email</label>
                    <input type="text" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="LoginModel.Password">Enter password</label>
                    <input asp-for="LoginModel.Password" />
                    <span asp-validation-for="LoginModel.Password" class="text-danger" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Register" class="btn btn-outline-dark" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}