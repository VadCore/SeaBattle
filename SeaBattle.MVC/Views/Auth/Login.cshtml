@model LoginModel

@{
    ViewData["Title"] = "Login";
}
<h1>Login</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-controller="Auth" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <div>
                <div class="form-group">
                    <label asp-for="Name">Enter Name</label>
                    <input type="text" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="Password">Enter password</label>
                    <input asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-outline-dark" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}